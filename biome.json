{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "files": {
    "include": ["./src"],
    "ignore": ["node_modules/**", "dist/**", "build/**", "coverage/**", "public/**", "docs/**"]
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useLiteralKeys": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"lineWidth": 100,
			"quoteStyle": "single",
			"indentStyle": "space"
		}
	}
}
